<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarSize"
        android:background="@color/colorPrimary"
        android:maxHeight="?attr/actionBarSize"
        android:minHeight="@dimen/toolbarSize">

        <TextView
            android:id="@+id/tv_wide_nation"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:drawableEnd="@drawable/selector_quote_nation_wide"
            android:drawableRight="@drawable/selector_quote_nation_wide"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:maxEms="4"
            android:padding="10dp"
            android:paddingEnd="3dp"
            android:paddingLeft="13dp"
            android:paddingRight="3dp"
            android:paddingStart="13dp"
            android:text="@string/nationwide"
            android:textColor="?titleColor" />


        <com.zgw.qgb.ui.widgets.SegmentControl
            android:id="@+id/segment_control"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:textSize="13sp"
            app:backgroundColors="@color/bg_quote_top_segment_control"
            app:boundWidth="1dip"
            app:cornerRadius="5dip"
            app:horizonGap="18dip"
            app:textColors="@color/text_quote_top_segment_control"
            app:texts="@string/quote_list_map"
            app:verticalGap="8dip" />

    </RelativeLayout>

    <com.zgw.qgb.ui.widgets.NoScrollViewPager
        android:id="@+id/vp_main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>
