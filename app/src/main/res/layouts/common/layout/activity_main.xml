<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zgw.qgb.ui.moudle.main.MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="131dp"
        android:text="Hello Worldello Worldello Worldello Worldello Worldello Worldello World!"
        android:drawableLeft="@drawable/selector_tab_contacts"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.499"
        android:id="@+id/textView"
        app:layout_constraintBottom_toTopOf="@+id/tv_main"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />
    <TextView
        android:id="@+id/tv_main"
        android:layout_width="225dp"
        android:layout_height="56dp"
        android:text="Hello World!"
        android:drawableLeft="@drawable/selector_tab_contacts"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        android:layout_marginStart="8dp"
        tools:layout_editor_absoluteX="143dp" />


    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="119dp"
        android:layout_height="209dp"
        android:layout_marginLeft="16dp"
        android:text="RadioButton"
        android:rotation="45"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView"
        tools:layout_editor_absoluteY="123dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp" />
    <!-- android:drawableLeft="@drawable/selector_tab_contacts"-->

</android.support.constraint.ConstraintLayout>
